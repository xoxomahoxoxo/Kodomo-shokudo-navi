<% if user_signed_in? %>
  <% if shop.like_user(current_user.id) %>
    <%= button_to shop_like_path(shop.id, @like.id), method: :delete, id: "like-button", remote: true do %>
      <i class="fa fa-heart" aria-hidden="true"></i>

    <% end %>
  <% else %>
    <%= button_to shop_likes_path(shop), id: "like-button", remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>

    <% end %>
  <% end %>
<% else %>
<i class="fa fa-heart-o" aria-hidden="true"></i>
<% end %>
